{
  "name": "ia-agent-app",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel --filter=@repo/marketing --filter=@repo/app dev",
    "dev:realtime": "pnpm --filter=@repo/realtime-server dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm -r --filter ./apps/app --filter ./apps/marketing --filter ./apps/realtime-server --filter ./packages/core --filter ./packages/ui --filter ./packages/templates typecheck",
    "ci": "pnpm -w lint && pnpm -w typecheck && pnpm -w build",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:studio": "pnpm --filter=@repo/app exec prisma studio",
    "db:migrate": "pnpm --filter=@repo/app exec prisma migrate dev",
    "db:seed": "pnpm --filter=@repo/app exec prisma db seed"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
